{% extends 'base.html.twig' %}

{% block pageTitle %}CostaFitness : Bilan alimentaire{% endblock %}
{% block headingTitle %}Bilan alimentaire à 4 semaines{% endblock %}
{% block pageClass %}initForm{% endblock %}

{% block body %}

    {{ form_start(form) }}
    <div class="initFormSection halfElement">
        <h2>Bilan alimentaire</h2>
        <div class="content">

            <div class="formSection">
                <div class="questionContainer">
                    <label for="questions">Tes questions et tes sensations :
                    </label>
                    {{ form_widget(form.questions) }}
                </div>                
                <div class="questionContainer">
                    <label for="evaluation">Sur une échelle de 1 à 10, à combien évalues tu le suivi du plan alimentaire en termes
                        de quantités et de qualités des aliments ?</label>
                        {{ form_widget(form.evaluation) }}
                </div>    
                <div class="questionContainer">
                    <label for="physicalChange">Des éventuels changements physiques que tu as pu constater : 
                    </label>
                    {{ form_widget(form.physicalChange) }}
                </div>
            </div> 
        </div>

    </div>

    <div class="initFormSection halfElement">
        <h2>Vos mensurations</h2>
        <div class="content">

            <div class="halfElement">
                <label for="weight">Poids en Kg</label>
                {{ form_widget(form.weight) }}

                <label for="hipSize">Taille de hanche en cm</label>
                {{ form_widget(form.hipSize) }}

            </div>
        </div> 
    </div>

    <div class="submitContainer"><input type="submit" value="Envoyez votre bilan alimentaire" class="btn bigBtn"></div>
        {{ form_end(form) }}

{% endblock %}
