{% extends 'base.html.twig' %}

{% block pageTitle %}CostaFitness : Bilan initial pack musculation{% endblock %}
{% block headingTitle %}Bilan Initial{% endblock %}
{% block pageClass %}initForm{% endblock %}

{% block body %}

    <form>
    <div class="initFormSection halfElement">
        <h2>Informations générales</h2>
        <div class="content">
            
            <div class="formSection">
                <h3>Coordonnées</h3>
                <div class="halfElement">
                    <label for="nom">Nom et Prénom</label>
                    {{ form_widget(form.name) }}

                    <label for="adresse">Adresse</label>
                    {{ form_widget(form.address) }}

                    <label for="cp">Code postal</label>
                    {{ form_widget(form.zipCode) }}

                </div>

                <div class="halfElement">
                    <label for="tel">Téléphone</label>
                    {{ form_widget(form.phoneMobile) }}

                    <label for="mail">Email</label>
                    {{ form_widget(form.email) }}

                    <label for="naissance">Date de naissance</label>
                    {{ form_widget(form.birthday) }}

                    <label for="metier">Métier</label>
                    {{ form_widget(form.job) }}
                </div>
            </div>
            
             <div class="formSection">
                <h3>Le sport et vous</h3>
                <div class="questionContainer">
                    <label for="exercises">Quels types d'entraînement faites vous, combien de fois par semaine et depuis quand ?</label>
                    {{ form_widget(form.exercises) }}
                </div>    
                
                <div class="questionContainer">
                    <label for="health">Avez-vous des problèmes de santé actuellement?
                                             Avez-vous des antécédents traumatologiques?
                    </label>
                    {{ form_widget(form.health) }}
                </div>
                
                <div class="questionContainer">
                    <label for="treatment">Suivez-vous un traitement médical actuellement?</label>
                    {{ form_widget(form.treatment) }}
                </div> 
                    <div class="questionContainer">
                    <label for="smoker">Est-ce que vous fumez? Si oui, combien de cigarettes par jour?</label>
                    {{ form_widget(form.smoker) }}
                </div> 
            </div>
            
             <div class="formSection">
                <h3>Vos objectifs - vos disponibilités</h3>
                <div class="questionContainer">
                    <label for="objectif">Quels types d'entraînement faites vous, combien de fois par semaine et depuis quand ?</label>
                    <select id="objectif">
                        <option value="masse">prise de masse musculaire</option>
                        <option value="seche">Sèche / perte de poids</option>
                        <option value="alimentaire">Ré-équilibrage alimentaire</option>
                        <option value="forme">Remise en forme</option>
                    </select>
                </div>    
                
                <div class="questionContainer">
                    <label for="objectifDetail">Précisez si vous le désirez :
                    </label>
                    <textarea id="objectifDetail" required></textarea>
                </div>
                
                <div class="questionContainer">
                    <label for="cure">Suivez-vous un traitement médical actuellement?</label>
                    <textarea id="cure" required></textarea>
                </div> 
                    <div class="questionContainer">
                    <label for="smoking">Est-ce que vous fumez? Si oui, combien de cigarettes par jour?</label>
                    <textarea id="smoking" required></textarea>
                </div> 
            </div>

            <div class="formSection">
                <h3>Mensurations</h3>
                <div class="halfElement">
                    <label for="height">Taille (en cm)</label>
                    <input type="text" id="height" required>
                </div>

                <div class="halfElement">
                    <label for="weight">Poids (en Kg)</label>
                    <input type="text" id="weight" required>
                </div>
                
                <div class="questionContainer">
                    <label for="imc">Votre IMC est de :</label>
                    <input id="imc" disabled>
                </div> 
            </div>
            
             <div class="formSection">
                <h3>Compléments d'informations (uniquement pour suivi à distance)</h3>
                <div class="halfElement">
                    <label for="epaule">Epaules</label>
                    <input type="text" id="epaule" required>
                    
                    <label for="pec">Pectoraux / poitrine</label>
                    <input type="text" id="pec" required>
                    
                    <label for="bras">Bras contracté</label>
                    <input type="text" id="height" required>
                </div>

                <div class="halfElement">
                    <label for="taille">Taille</label>
                    <input type="text" id="taille" required>
                    
                    <label for="cuisse">Cuisse</label>
                    <input type="text" id="cuisse" required>
                    
                    <label for="hanches">Hanches</label>
                    <input type="text" id="hanches" required>
                </div>
                
                 <div class="questionContainer">
                     <img src="/bundles/app/images/mesureMensurations.jpg" alt=""/>
                </div> 
                
            </div>
            
             <div class="formSection">
                <h3>Divers</h3>
                <div class="questionContainer">
                    <label for="reference">Comment avez-vous connu le site de David?</label>
                    <textarea id="reference" required></textarea>
                </div>    
                
                <div class="questionContainer">
                    <label for="credential">Qu'est ce qui a retenu votre attention sur le site?</label>
                    <textarea id="credential" required></textarea>
                </div>
                </div>

           

        </div> 
    </div>

    <div class="initFormSection halfElement">
        <h2>Votre alimentation actuelle</h2>
        <div class="content">
            
             
             <div class="formSection">
                <h3>Connaitre votre comportement alimentaire</h3>
                <div class="questionContainer">
                    <label for="foodPreferences">Précisez moi vos préférences, faiblesses et pulsions alimentaires.</label>
                    <textarea id="foodPreferences" required></textarea>
                </div>    
                
                <div class="questionContainer">
                    <label for="drinks"> Indiquez moi tout ce que vous buvez tout au long de la journée.</label>
                    <textarea id="drinks" required></textarea>
                </div>
                
                <div class="questionContainer">
                    <label for="complements">Utilisez-vous déjà des complèments alimentaires? Si non, souhaitez-vous en utiliser ?</label>
                    <textarea id="complements" required></textarea>
                </div>    
                
                <div class="questionContainer">
                    <label for="drinks">Indiquez moi l'heure de votre entrainement:</label>
                    <textarea id="drinks" required></textarea>
                </div>
                </div>
            
            <div class="formSection">
                <h3>Votre alimentation actuelle</h3>
                <div class="questionContainer">
                    <label for="foodRythm"> Indiquez moi les horaires de vos repas et collations sur une journée et tout ce que vous mangez (Petit déjeuner - Collation matin - déjeuner - Collation soir - dîner)</label>
                    <textarea id="foodRythm" required placeholder="Repas | Heure | Aliments"></textarea>
                </div>    
                
                <div class="questionContainer">
                    <label for="foodQuotes"> Précisez moi si besoin des remarques sur votre alimentation et votre rythme journalier.</label>
                    <textarea id="foodQuotes" required></textarea>
                </div>
                
                <div class="questionContainer">
                    <label for="foodWork">Pouvez-vous transporter avec vous de la nourriture sur votre lieu de travail?</label>
                    <textarea id="foodWork" required></textarea>
                </div>    
                
                <div class="questionContainer">
                    <label for="foodRestaurant">Combien de fois par semaine allez vous au restaurant?</label>
                    <textarea id="foodRestaurant" required></textarea>
                </div>
                </div>
            
        </div> 
    </div>

        <div class="initFormSection halfElement">
            <h2>Vos photos</h2>
            <div class="content photoUpload">
                <div class="thirdElement">
                    <h3>Photo bilan face</h3>
                    <input type="file" class="custom-input" required>
                </div>
                <div class="thirdElement">
                    <h3>Photo bilan coté</h3>
                    <input type="file" class="custom-input" required>
                </div>
                <div class="thirdElement">
                    <h3>Photo bilan dos</h3>
                    <input type="file" class="custom-input" required>
                </div>

            </div>
        </div>

    <div class="submitContainer"><input type="submit" value="Envoyez votre bilan initial" class="btn bigBtn"></div>
</form>

{% endblock %}
