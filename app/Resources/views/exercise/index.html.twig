        <a href="{{ path('pack_index') }}" class="btn">Liste des utilisateurs</a>

    </aside>

        {% for exercise in exercises %}
            <article>
                <header {% if exercise.reference %}class = "exerciseReference"{% endif %}>{{ exercise.name }}</header>
